{
    "name": "liveecommerce/php-test",
    "description": "Live eCommerce PHP Job Test",
    "type": "project",
    "license": "MIT",
    "authors": [
        {
            "name": "Hugo Blanco",
            "email": "blancohfb@gmail.com"
        }
    ],
    "minimum-stability": "stable",
    "require": {},
    "require-dev": {
        "php": "^7.2",
        "phpunit/phpunit": "^8.1",
        "squizlabs/php_codesniffer": "^3.4"
    },
    "autoload": {
        "psr-4": {
            "Live\\Collection\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Live\\Collection\\": "tests/src"
        }
    },
    "scripts": {
        "test": "phpunit --testdox --colors=always",
        "check": "phpcs -p --standard=phpcs.xml --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src tests"
    },
    "config": {
        "sort-packages": true
    }
}
